<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SynsDataActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/colorPrimaryDark"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:id="@+id/back_iv"
            android:layout_gravity="center_vertical"
            android:src="@drawable/back_icon"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:text="Syns Data to Server"

            />

    </LinearLayout>


    <com.github.lzyzsd.circleprogress.DonutProgress
        android:id="@+id/progress_bar"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerInParent="true"
        app:donut_finished_color="#069326"
        app:donut_inner_bottom_text_color="@color/colorAccent"
        app:donut_inner_bottom_text_size="25sp"
        app:donut_text_color="@color/colorAccent"
        app:donut_text_size="22sp" />


    <TextView
        android:id="@+id/pg_number_txtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:layout_marginBottom="120dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/total_pg_txtvIew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:layout_marginBottom="80dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/syns_success_txtvIew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#069326"
        android:layout_centerInParent="true"
        />



</RelativeLayout>